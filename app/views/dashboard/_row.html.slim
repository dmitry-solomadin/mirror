    data-row-id="#{widget.id}" data-widget-position="#{widget.position}"}
  - widget.children.by_position.each do |child_widget|
    = render 'dashboard/element', widget: child_widget
  a.btn.btn-danger.destroy-widget-button.glyphicon.glyphicon-remove-circle.js-destroy-row-button href="#{dashboard_widget_path(@dashboard.id, widget.id) if widget.id}"
  - if widget.top?
    div.row style="clear: both;"
